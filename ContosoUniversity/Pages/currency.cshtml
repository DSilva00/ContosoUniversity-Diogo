@page
@model ContosoUniversity.Pages.currencyModel
@{
    ViewData["Title"] = "currency";
}

<header class="jumbotron">
    <section class="jumbotron"></section>

    <h2>Diogo's Currency converter</h2>
    <p>
        Convert GBP (£) to USD ($)
        <br />

        <h2>Today's date is @DateTime.Now.ToShortDateString()</h2>
    </p>

</header>



<section>
    <form method="post">
        <label>GBP value</label>
        <input id="GBP" type="number" asp-for="Pounds" placeholder="From currency" required />
        <input type="submit" value="Convert currency" />


        <p>
            @if (this.Model.Pounds != 0)

            {

                <span>USD = $</span>@this.Model.Dollars


            }


        </p>


    </form>

</section>

